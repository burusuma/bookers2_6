<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <div class ='detail'>
        <%= render 'detail', book: @book %>
      </div>
  		
      <%#= render 'books/comment', book: @book,book_comment: @book_comment%>
      
      <div class = 'book_comment'>
        <%= render 'book_comments/comment_table', book: @book %>
      </div>
      
      <div class = 'new_comment'>
        <%= render "book_comments/new_comment", book: @book, book_comment: @book_comment %>
      </div>
      
    </div>
  </div>
</div>